{
  "name": "cattle-fence-designer",
  "version": "1.0.0",
  "description": "牛舎の柵簡易設計アプリケーション",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron-dev\""
  },
  "dependencies": {
    "dxf-writer": "^1.2.2",
    "electron": "^25.0.0",
    "fabric": "^5.3.0",
    "jspdf": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.4.0",
    "firebase-tools": "^14.19.0",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.cattlefence.designer",
    "productName": "牛舎柵設計アプリ",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
